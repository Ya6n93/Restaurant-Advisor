<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/update_name"
        android:layout_below="@id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_name"
        android:layout_alignLeft="@id/update_name"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Lastname :" />

    <EditText
        android:id="@+id/update_description"
        android:layout_below="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_description"
        android:layout_alignLeft="@id/update_description"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="Age :" />

    <EditText
        android:id="@+id/update_price"
        android:layout_below="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@id/update_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/update_price"
        android:textColor="#000000"
        android:text="e-mail :" />

    <EditText
        android:id="@+id/update_website"
        android:layout_below="@id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_below="@id/update_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/update_website"
        android:textColor="#000000"
        android:text="Username :" />

    <EditText
        android:id="@+id/update_planning"
        android:layout_below="@id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_below="@id/update_planning"
        android:layout_alignLeft="@id/update_planning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Password :" />

    <EditText
        android:id="@+id/editText6"
        android:layout_below="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="textPassword"
         />

    <TextView
        android:id="@+id/textView7"
        android:layout_below="@id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/editText6"
        android:textColor="#000000"
        android:text="Phone :" />

    <EditText
        android:id="@+id/editText8"
        android:layout_below="@id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:text="Register :" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText8"
        android:layout_alignRight="@id/editText8"
        android:layout_marginTop="10dp"
        android:background="@color/ColorR"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView10"
        android:layout_below="@id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Firstname :" />

    <Button
        android:id="@+id/button4"
        android:layout_below="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText8"
        android:layout_marginTop="10dp"
        android:background="@color/ic_launcher_background"
        android:text="Return" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_description"
        android:layout_marginTop="65dp"
        android:layout_alignLeft="@id/update_description"
        android:background="@color/ic_launcher_background"
        android:text="Login"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="454dp" />
    <EditText
        android:id="@+id/update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="250dp" />
    <EditText
        android:id="@+id/update_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="120dp"
        android:background="#D44A46"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteY="105dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:textColor="#000000"
        android:visibility="visible"
        android:layout_alignLeft="@id/update_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/imageView"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="231dp"
        tools:text="Username :" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textColor="#000000"
        android:layout_below="@+id/update_name"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/update_description"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="324dp"
        tools:text="Password :" />
    <Button
        android:id="@+id/update1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_description"
        android:layout_alignRight="@id/update_description"
        android:layout_marginTop="65dp"
        android:background="@color/ColorR"
        android:text="Register"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="524dp" />
    <Button
        android:id="@+id/button3"
        android:layout_below="@id/update1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:width="200dp"
        android:height="60dp"
        android:layout_centerHorizontal="true"
        android:text="Enter as guest" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register" />

</RelativeLayout>